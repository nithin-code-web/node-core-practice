                    <button>Add to Cart</button>
                </div>
            </div>
                <div>
                    <div class="card">
                        <img src="https://rukminim2.flixcart.com/image/312/312/xif0q/television/w/a/q/-original-imah3yh6bmjtghny.jpeg?q=70"
                            alt="TV">
                        <h3>Samsung 42 inch TV</h3>
                        <div class="price">₹29,999</div>
                        <button>Add to Cart</button>
                    </div>

                </div>
            </div>
                <!-- Footer -->
                <footer>
                    © 2026 MyStore. All rights reserved.
                </footer>

</body>
</html>