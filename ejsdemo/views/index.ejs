<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Simple E-Commerce</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        /* Navbar */
        .navbar {
            background-color: #222;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar h2 {
            margin: 0;
        }

        .nav-links button {
            padding: 8px 16px;
            margin-left: 10px;
            background-color: #ff6600;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .nav-links button:hover {
            background-color: #e65c00;
        }

        /* Container */
        .container {
            max-width: 1100px;
            margin: 40px auto;
            padding: 0 20px;
        }

        /* Products Grid */
        .products {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
            gap: 20px;
        }

        /* Product Card */
        .card {
            background: white;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 5px;
        }

        .card h3 {
            margin: 10px 0;
        }

        .price {
            color: green;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card button {
            padding: 8px 16px;
            border: none;
            background-color: #ff6600;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

        .card button:hover {
            background-color: #e65c00;
        }

        /* Footer */
        footer {
            margin-top: 40px;
            background-color: #222;
            color: white;
            text-align: center;
            padding: 15px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <div class="navbar">
        <h2>MyStore</h2>
        <div class="nav-links">
            <button type="button" onclick="location.href='/user/'">Home</button>
            <button type="button" onclick="location.href='/user/login'">Login</button>
            <button type="button" onclick="location.href='/user/register'">Register</button>
        </div>
    </div>

    <!-- Products -->
    <div class="container">
        <div class="products">

            <div class="card">
                <img src="https://rukminim2.flixcart.com/image/260/260/xif0q/headphone/r/c/j/-original-imahae3ea2j4mhkt.jpeg?q=60"
                    alt="Headphones">
                <h3>Wireless Headphones</h3>
                <div class="price">₹2,499</div>
                <button>Add to Cart</button>
            </div>

            <div class="card">
                <img src="https://rukminim2.flixcart.com/image/260/260/xif0q/watch/8/a/z/1-2212-rls-boys-girls-original-imahjngj9gztsbcz.jpeg?q=60"
                    alt="Watch">
                <h3>Smart Watch</h3>
                <div class="price">₹3,999</div>
                <button>Add to Cart</button>
            </div>

            <div class="card">
                <img src="https://rukminim2.flixcart.com/image/612/612/xif0q/speaker/studio-monitor/w/m/k/m412sp-portable-dynamic-thunder-sound-with-high-bass-mz-original-imahjnrjbyqpqskf.jpeg?q=70"
                    alt="Speaker">
                <h3>Bluetooth Speaker</h3>
                <div class="price">₹1,799</div>
                <button>Add to Cart</button>
            </div>

            <div class="card">
                <img src="https://rukminim2.flixcart.com/image/612/612/xif0q/mouse/s/z/j/spectre-3600-dpi-gaming-sensor-and-7-colours-rainbow-lighting-original-imah92aya7fuhjrq.jpeg?q=70"
                    alt="Mouse">
                <h3>Gaming Mouse</h3>
                <div class="price">₹999</div>
                <button>Add to Cart</button>
            </div>


            <div class="card">
                <img src="https://rukminim1.flixcart.com/image/220/220/xif0q/mobile/o/d/1/-original-imahggetmzzanrty.jpeg?q=60"
                    alt="Iphone 16">
                <h3>Apple iphone 16</h3>
                <div class="price">₹55,999</div>
                <button>Add to Cart</button>
            </div>
            <div class="card">
                <img src="https://rukminim2.flixcart.com/image/312/312/xif0q/computer/y/z/o/-original-imahg5fuv5wqgkkj.jpeg?q=70"
                    alt="Laptop">
                <h3>HP Laptop</h3>
                <div class="price">₹45,499</div>
                <button>Add to Cart</button>

            </div>  
            <div>
                <div class="card">
                    <img src="https://rukminim2.flixcart.com/image/312/312/xif0q/air-conditioner-new/d/7/f/-original-imahdr4apzpuydyq.jpeg?q=70"
                        alt="AC">
